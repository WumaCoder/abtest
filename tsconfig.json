{
  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@app/*": ["./src/*"],
      "@boot": ["./libs/boot/src"],
      "@boot/*": ["./libs/boot/src/*"],
      "@tools": ["./libs/tools/src"],
      "@tools/*": ["./libs/tools/src/*"]
    }
  },
  "reflection": true,
  "include": ["src/**/*.ts", "libs/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
